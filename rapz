    <script>
        function copyToClipboard(text) {
            const input = document.createElement('input');
            input.value = text;
            document.body.appendChild(input);
            input.select();
            document.execCommand('copy');
            document.body.removeChild(input);
            
            alert('Nomor berhasil disalin: ' + text);
        }

        // Efek glitch acak pada latar belakang
        document.addEventListener('DOMContentLoaded', function() {
            const bg = document.querySelector('.cyberpunk-bg');
            setInterval(() => {
                if (Math.random() > 0.7) {
                    bg.style.opacity = 0.2 + Math.random() * 0.1;
                    bg.style.backgroundPosition = `${Math.random() * 20}px ${Math.random() * 20}px`;
                }
            }, 300);
        });
    </script>
